<div class="container-fluid">

User: {{input type="text" value=filter }} 
<button {{action 'search'}}>Search</button>

	<div class="col-md-5">
			{{#each model as |user|}}
				<div class="users">
					<img src="{{user.avatar_url}}" height="50px" width="50px" class="pull-left"/>
					<ul class="listuser pull-left">
						<li> 
						  {{#link-to "userlist.user" user.login }}
						 		User URL: {{user.url}}
						  {{/link-to}}
						</li>
						<li>User Name:{{user.login}}</li>
					</ul>
				</div>
			{{/each}}
	</div>
	<div class="col-md-6">
		{{outlet}}
	</div>
</div>
